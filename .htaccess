Options -Indexes
Options +FollowSymLInks
RewriteEngine On

#Error logggin on
php_flag display_startup_errors on
php_flag display_errors on
php_flag html_errors on
php_flag  log_errors on
php_value error_log  /var/www/skillseeker/trunk/logs/errors.log


#If file not found go to custom error page
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^.*$ /var/www/trunk/error.php [L]


## PROTECT FILES ###
<filesMatch ".(htaccess|htpasswd|ini|phps|fla|psd|log|sh|php)$">
  Order Allow,Deny
  Deny from all
</filesMatch>

<FilesMatch "index.php|error.php|securimage_show.php">
    Order Allow,Deny
    Allow from all
</FilesMatch>
